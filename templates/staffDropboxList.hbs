{{> header }}
<h2>Customer Uploads</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Child's Name</th>
      <th scope="col">Docs</th>
      <th scope="col">Date of Birth</th>
      <th scope="col">Parent's Email</th>
      <th scope="col">Notes</th>

    </tr>
  </thead>
  <tbody data-testid="staff-dropboxes-list">
    {{#each dropboxes}}
    <tr>
      <td scope="row">
        <a data-testid="dropbox-link" href="/dropboxes/{{this.id}}/view">
          {{this.customer.firstName}} {{this.customer.lastName}}
        </a>
      </td>
      <td>{{this.count}}</td>
      <td>{{this.customer.dob}}</td>
      <td>{{this.customer.parentsEmail}}</td>
      <td>{{this.description}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{> footer isStaff=true }}